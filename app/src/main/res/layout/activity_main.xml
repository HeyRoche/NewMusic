<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/xphoto"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_above="@+id/billie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/xphoto" />

    <ImageView
        android:id="@+id/billiephoto"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/billiephoto" />

    <TextView
        android:id="@+id/xxx"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xphoto"
        android:layout_centerHorizontal="true"
        android:text="@string/aXXX"/>

    <TextView
        android:id="@+id/billie"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/billiephoto"
        android:layout_centerHorizontal="true"
        android:text="@string/aBillie"/>

</RelativeLayout>

